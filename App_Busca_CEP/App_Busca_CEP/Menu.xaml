<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="App_Busca_CEP.Menu">

    <!-- O que irá aparecer no Menu. -->
    
    <MasterDetailPage.Master>

        <ContentPage Title="Menu">

            <ContentPage.Content>

                <StackLayout>

                    <ScrollView>

                        <StackLayout>

                            <Button x:Name="btn_bairros_por_cidade" Text="Bairros" Clicked="btn_bairros_por_cidade_Clicked"/>

                        </StackLayout>

                    </ScrollView>

                </StackLayout>

            </ContentPage.Content>

        </ContentPage>
        
    </MasterDetailPage.Master>
    
    <!-- O que irá aparecer por trás do Menu. -->

    <MasterDetailPage.Detail>
        
            
        
    </MasterDetailPage.Detail>
    
</MasterDetailPage>