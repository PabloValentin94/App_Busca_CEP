<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Busca_CEP.Home"
             Title="Home"
             Style="{ StaticResource Fundo_Paginas }">

    <ContentPage.Resources>

        <ResourceDictionary>

            <Style x:Key="Botao" TargetType="Button">

                <Setter Property="BackgroundColor" Value="#FFFFFF"/>
                <Setter Property="BorderWidth" Value="4"/>
                <Setter Property="BorderColor" Value="#4682B4"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="TextColor" Value="#4682B4"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="50"/>

            </Style>

        </ResourceDictionary>

    </ContentPage.Resources>
    
    <ContentPage.Content>

        <ScrollView VerticalOptions="Center">

            <StackLayout Padding="10" Spacing="15">

                <!--<Image x:Name="img_logo" Aspect="AspectFit"/>-->

                <Button x:Name="btn_opcoes" Text="Ver Opções"
                        Clicked="btn_opcoes_Clicked"
                        Style="{ StaticResource Botao }"/>

            </StackLayout>

        </ScrollView>
        
    </ContentPage.Content>
    
</ContentPage>